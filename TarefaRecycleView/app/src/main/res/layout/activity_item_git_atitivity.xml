<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.GitInformationAtitivity" >


    <ImageView
        android:id="@+id/git_img_avatar"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_margin="10dp"
        android:src="@mipmap/ic_launcher_round"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintHorizontal_bias="0.0"/>

    <TextView
        android:id="@+id/git_repository_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:hint="Titulo do rep"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toEndOf="@id/git_img_avatar"
        app:layout_constraintTop_toTopOf="@id/git_img_avatar"
        android:textSize="22sp"/>

    <TextView
        android:id="@+id/git_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:hint="Titulo repositorio"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="@id/git_repository_name"
        app:layout_constraintTop_toBottomOf="@id/git_repository_name"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/git_img"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/git_img_avatar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:src="@drawable/github_img" />

    <TextView
        android:id="@+id/git_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:hint="Texto com a descrição"
        android:layout_margin="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/git_img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/git_favorite_icon"
        app:layout_constraintHorizontal_bias="0.0"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/git_favorite_icon"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/favorite_icon"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@id/git_description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.8" />

    <ImageView
        android:id="@+id/git_share_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/share_icon"
        android:layout_marginLeft="28dp"
        app:layout_constraintStart_toEndOf="@id/git_favorite_icon"
        app:layout_constraintTop_toTopOf="@id/git_favorite_icon" />


</androidx.constraintlayout.widget.ConstraintLayout>